# Configurações do Banco de Dados
MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/database?retryWrites=true&w=majority

# Configurações do Servidor
PORT=5000

# Chave secreta para JWT (gere uma nova com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=sua_chave_secreta_jwt_aqui

# URL do Frontend
FRONTEND_URL=https://seu-dominio.com

# API Key do Asaas (Sandbox ou Produção)
ASAAS_API_KEY=sua_api_key_asaas_aqui

# Configurações de E-mail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_de_aplicativo_gmail
EMAIL_FROM_NAME=Nome da Sua Empresa
EMAIL_FROM_EMAIL=seu_email@gmail.com

# Configurações alternativas para outros provedores
# Para Outlook/Hotmail:
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587

# Para Yahoo:
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587